{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d", "bin",
                "-cp", "bin",
                "${workspaceFolder}/src/**/*.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$javac"],
            "detail": "Compila las clases Java y las coloca en la carpeta bin."
        }
    ]
}
